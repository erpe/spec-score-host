<div class='intro'>
  <h2>Sign in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class='form-group'>
      <%= f.email_field :email, placeholder: 'email', autofocus: true, class: 'form-control input-lg' %>
    </div>

    <div class='form-group'>
      <%= f.password_field :password, placeholder: 'password', autocomplete: "off", class: 'form-control input-lg' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class='form-group'>
      <%= f.label :remember_me, class: 'control-label' do %>
        Remember me
        <%= f.check_box :remember_me, class: 'checkbox' %>
      <% end %>
      </div>
    <% end -%>

    <div class='form-group'>
      <%= f.submit "Sign in", class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
